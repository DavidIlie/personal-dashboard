{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["dom", "es6", "es2017", "esnext.asynciterable"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["./src/lib/*"],
            "@components/*": ["./src/components/*"],
            "@ui/*": ["./src/ui/*"],
            "@styles/*": ["./src/styles/*"],
            "@data/*": ["./src/data/*"],
            "@interfaces/*": ["./src/types/*"],
            "@hooks/*": ["./src/hooks/*"],
            "@modules/*": ["./src/modules/*"],
            "@global-stores/*": ["./src/global-stores/*"],
            "@schemas/*": ["./src/schemas/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.hook.ts", "src"],
    "exclude": ["node_modules"],
    "typeAcquisition": {
        "include": ["react", "next"]
    }
}
